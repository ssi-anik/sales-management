                <action android:name="com.example.anik.broadcast.UserInformation" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastListener.ProductJSONBroadcastListener"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.ProductJSONBroadcastListener" />
            </intent-filter>
        </receiver>
    </application>

