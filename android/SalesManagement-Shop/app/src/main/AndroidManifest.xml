                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anik.shop.MenuActivity" />
        </activity>

        <service android:name=".services.AppServices" />

        <receiver
            android:name=".broadcastListener.OrderBroadcastListener"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.Order" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastListener.TextualComplaintBroadcastListener"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.TextualComplaint" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastListener.PhotoComplaintBroadcastListener"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.PhotoComplaint" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastListener.BillBroadcastListener"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.Bill" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastListener.LocationTrackerBroadcastListener"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.Location" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastListener.QuickOrderBroadcastListener"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.example.anik.broadcast.Quick" />
            </intent-filter>
        </receiver>
        <receiver
