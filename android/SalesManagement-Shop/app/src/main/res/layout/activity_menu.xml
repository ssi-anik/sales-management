<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.anik.shop.MenuActivity">

    <ScrollView
        android:id="@+id/menuScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <Button
                android:id="@+id/buttonProducts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:enabled="true"
                android:text="Products"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonPlaceOrder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonProducts"
                android:enabled="true"
                android:text="Place order"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonOrderDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonPlaceOrder"
                android:enabled="true"
                android:text="Order Details"
                android:textAllCaps="false"/>

            <Button
                android:visibility="gone"
                android:id="@+id/buttonPlaceBill"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonOrderDetails"
                android:enabled="true"
                android:text="Place bill"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonBillDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonPlaceBill"
                android:enabled="true"
                android:text="Bill details"
                android:textAllCaps="false"/>

            <Button
                android:visibility="gone"
                android:id="@+id/buttonSubmitComplaint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonBillDetails"
                android:enabled="true"
                android:text="Complaints"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonAccountDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonSubmitComplaint"
                android:enabled="true"
                android:text="Account Details"
                android:textAllCaps="false"/>

            <Button
                android:visibility="gone"
                android:id="@+id/buttonBonus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonAccountDetails"
                android:enabled="true"
                android:text="Bonus"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonOffers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonBonus"
                android:enabled="true"
                android:text="Offers"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonNews"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonOffers"
                android:enabled="true"
                android:text="News"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonQuickOrder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonNews"
                android:enabled="true"
                android:text="Quick order"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/buttonActivityLog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttonQuickOrder"
                android:enabled="true"
                android:text="Activity Log"
                android:textAllCaps="false"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
